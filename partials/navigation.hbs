<nav class="page-navigation{{#if isSecondary}} page-navigation--secondary{{/if}}{{^is "home"}} page-navigation--primary{{/is}}">
	<ul class="page-navigation__list">
    {{#foreach navigation}}
    <li class="page-navigation__item page-navigation__item--{{slug}}{{#if current}} page-navigation__item--current{{/if}}">
			<a href="{{url absolute="true"}}"{{#is "home"}} class="button"{{/is}}>{{label}}</a>
		</li>
    {{/foreach}}
		{{^is "home"}}
		<li class="page-navigation__item page-navigation__item--search">
			<a href="" data-ghost-search>
				<box-icon name="search"></box-icon>
			</a>
		</li>
		{{/is}}
  </ul>
</nav>
