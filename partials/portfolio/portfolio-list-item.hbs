<article class="post-item post-item--portfolio">
  <header class="post-item__header">
    <a href="{{url}}">
      {{#if feature_image}}
        <img
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(min-width: 1400px) 1400px, 92vw"
            src="{{img_url feature_image size="xl"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        />
      {{else}}
        <img src="{{asset "images/project-default.png"}}" />
      {{/if}}
      <div class="post-title">
        <h2 class="solid">{{title}}</h2>
        <p class="excerpt excerpt--header" aria-hidden="true">{{excerpt characters="180"}}</p>
      </div>
    </a>
  </header>
  <p class="excerpt">{{excerpt characters="180"}}</p>
</article>